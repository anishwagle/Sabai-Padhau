@model SabaiPadhau.Models.tblCertificate

@{
    ViewBag.Title = "ApplyForTeacher";
    Layout = "~/Views/Shared/_LoginedLayout.cshtml";
}

<h2>ApplyForTeacher</h2>

@using (Html.BeginForm("ApplyForTeacher","User",FormMethod.Post,new {@enctype="multipart/form-data" })) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        



        <div class="form-group">
            @Html.LabelFor(model => model.GovernmentVerifiedImage, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.GovernmentVerifiedImage, new {@Type="file", @class = "form-control" })
                @Html.ValidationMessageFor(model => model.GovernmentVerifiedImage, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
